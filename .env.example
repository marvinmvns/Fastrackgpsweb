# FastrackGPS - Environment Configuration
# Copy this file to .env and configure your settings

##############################################################################
# APPLICATION SETTINGS
##############################################################################

APP_NAME=FastrackGPS
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_SECRET=your-app-secret-key-here-change-this
APP_TIMEZONE=America/Sao_Paulo

##############################################################################
# DATABASE CONFIGURATION
##############################################################################

DB_HOST=localhost
DB_PORT=3306
DB_NAME=fastrackgps
DB_USER=fastrackgps
DB_PASS=your-database-password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Connection pool settings
DB_MAX_CONNECTIONS=100
DB_TIMEOUT=30

##############################################################################
# CACHE CONFIGURATION
##############################################################################

CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# File cache fallback
FILE_CACHE_PATH=storage/cache

##############################################################################
# SESSION CONFIGURATION
##############################################################################

SESSION_DRIVER=redis
SESSION_LIFETIME=7200
SESSION_COOKIE_NAME=fastrackgps_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

##############################################################################
# LOGGING CONFIGURATION
##############################################################################

LOG_LEVEL=info
LOG_CHANNEL=daily
LOG_MAX_FILES=30
LOG_PATH=storage/logs

# Separate log files
GPS_LOG_ENABLED=true
GPS_LOG_PATH=storage/logs/gps
API_LOG_ENABLED=true
API_LOG_PATH=storage/logs/api
SECURITY_LOG_ENABLED=true
SECURITY_LOG_PATH=storage/logs/security

##############################################################################
# GPS TRACKING CONFIGURATION
##############################################################################

# GPS server settings
GPS_SERVER_ENABLED=true
GPS_SERVER_HOST=0.0.0.0
GPS_SERVER_PORT=8090
GPS_PROTOCOL_TIMEOUT=300

# Position processing
GPS_POSITION_BATCH_SIZE=100
GPS_POSITION_QUEUE_SIZE=1000
GPS_MIN_ACCURACY=10
GPS_MAX_SPEED=300

# Real-time updates
WEBSOCKET_ENABLED=true
WEBSOCKET_HOST=127.0.0.1
WEBSOCKET_PORT=8080

##############################################################################
# ALERT SYSTEM
##############################################################################

ALERTS_ENABLED=true
ALERT_BATCH_SIZE=50
ALERT_RETENTION_DAYS=90

# Speed alerts
SPEED_ALERT_ENABLED=true
SPEED_ALERT_THRESHOLD=80
SPEED_ALERT_TOLERANCE=5

# Geofence alerts
GEOFENCE_ALERT_ENABLED=true
GEOFENCE_CHECK_INTERVAL=30

# Offline alerts
OFFLINE_ALERT_ENABLED=true
OFFLINE_THRESHOLD_MINUTES=10

##############################################################################
# EMAIL CONFIGURATION
##############################################################################

MAIL_ENABLED=false
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@fastrackgps.com
MAIL_FROM_NAME=FastrackGPS

##############################################################################
# SMS CONFIGURATION
##############################################################################

SMS_ENABLED=false
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM_NUMBER=+5511999999999

##############################################################################
# MAPS CONFIGURATION
##############################################################################

# Google Maps
GOOGLE_MAPS_ENABLED=true
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_MAPS_DEFAULT_ZOOM=12

# OpenStreetMap (fallback)
OPENSTREETMAP_ENABLED=true
OPENSTREETMAP_TILE_SERVER=https://tile.openstreetmap.org

# Map defaults
DEFAULT_MAP_CENTER_LAT=-23.5505
DEFAULT_MAP_CENTER_LNG=-46.6333
DEFAULT_MAP_ZOOM=10

##############################################################################
# SECURITY CONFIGURATION
##############################################################################

# Authentication
AUTH_TOKEN_LIFETIME=3600
AUTH_REFRESH_TOKEN_LIFETIME=86400
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_TIME=900

# Password policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# CSRF Protection
CSRF_ENABLED=true
CSRF_TOKEN_LIFETIME=7200

# API Security
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_PER_MINUTE=100
API_CORS_ENABLED=true
API_CORS_ORIGINS=*

##############################################################################
# FILE UPLOAD CONFIGURATION
##############################################################################

UPLOAD_ENABLED=true
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
UPLOAD_PATH=storage/uploads

##############################################################################
# BACKUP CONFIGURATION
##############################################################################

BACKUP_ENABLED=true
BACKUP_PATH=storage/backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true

# Database backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=daily
DB_BACKUP_TIME=02:00

##############################################################################
# PERFORMANCE CONFIGURATION
##############################################################################

# Query caching
QUERY_CACHE_ENABLED=true
QUERY_CACHE_LIFETIME=3600

# Template caching
TEMPLATE_CACHE_ENABLED=true
TEMPLATE_CACHE_PATH=storage/cache/templates

# Asset optimization
ASSET_MINIFY_ENABLED=true
ASSET_CACHE_ENABLED=true
ASSET_VERSION=1.0.0

##############################################################################
# MONITORING CONFIGURATION
##############################################################################

# Application monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
PERFORMANCE_TRACKING_ENABLED=true

# Error tracking
ERROR_TRACKING_ENABLED=true
ERROR_NOTIFICATION_ENABLED=false

# Metrics collection
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=7

##############################################################################
# DEVELOPMENT SETTINGS
##############################################################################

# Debug tools (only for development)
QUERY_LOG_ENABLED=false
TEMPLATE_DEBUG=false
PROFILER_ENABLED=false

# Testing
TEST_DB_NAME=fastrackgps_test
TEST_DB_USER=fastrackgps_test
TEST_DB_PASS=test_password

##############################################################################
# EXTERNAL SERVICES
##############################################################################

# Geocoding service
GEOCODING_ENABLED=true
GEOCODING_PROVIDER=google
GEOCODING_API_KEY=your-geocoding-api-key
GEOCODING_CACHE_ENABLED=true

# Weather service
WEATHER_ENABLED=false
WEATHER_API_KEY=your-weather-api-key

# Traffic information
TRAFFIC_ENABLED=false
TRAFFIC_API_KEY=your-traffic-api-key

##############################################################################
# WEBHOOK CONFIGURATION
##############################################################################

WEBHOOKS_ENABLED=false
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

##############################################################################
# MAINTENANCE MODE
##############################################################################

MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistema em manutenção. Voltaremos em breve."
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1